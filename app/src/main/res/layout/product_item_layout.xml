<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp"
    android:layout_marginTop="@dimen/margin_4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <ImageView
      android:layout_width="@dimen/product_image_size"
      android:layout_height="@dimen/product_image_size"
      android:id="@+id/product_image_view"
      android:layout_alignParentTop="true"
      android:layout_alignParentStart="true"/>
  <TextView
      android:text="@string/product_name_title_holder"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="16sp"
      android:layout_marginTop="4dp"
      android:layout_marginStart="@dimen/margin_4dp"
      android:maxLines="2"
      android:ems="15"
      android:ellipsize="end"
      android:id="@+id/productname_tv"
      android:hint="@string/product_name_hint" android:layout_alignParentTop="true"
      android:layout_toEndOf="@+id/product_image_view"/>
  <TextView
      android:text="N/A"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/discountpriceTv" android:layout_alignBottom="@+id/product_image_view"
      android:layout_alignStart="@+id/productname_tv"/>
  <TextView
      android:text="N/A"
      android:textColor="@color/colorAccent"
      android:layout_width="wrap_content"
      android:textStyle=""
      android:layout_height="wrap_content" android:layout_alignTop="@+id/discountpriceTv"
      android:layout_toEndOf="@+id/discountpriceTv" android:layout_marginStart="22dp"
      android:id="@+id/actualpriceTv"/>
  <Button
      android:text="Button"
      android:layout_width="wrap_content"
      android:layout_height="50dp"
      android:id="@+id/dis_per_button"
      android:background="@color/colorGreenOffer"
      android:textColor="@color/colorWhite"
      android:layout_alignBaseline="@+id/actualpriceTv"
      android:layout_alignBottom="@+id/actualpriceTv" android:layout_alignParentEnd="true"/>

</RelativeLayout>